<button id="Task4">Click me</button>
<script>
        document.getElementById("clickMeButton").addEventListener("click", function() {
            let numbers = [];
            for (let i = 0; i <= 100; i++) {
                numbers.push(i);
            }

            let sum = numbers.reduce((acc, num) => acc + num, 0);

            console.log("The Total is : " + sum);
        });
    </script>
    
